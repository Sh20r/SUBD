@model LAB.Models.PurchaseRaw

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PurchaseRaw</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @using (Html.BeginForm())
            {
                <fieldset>
                    <div class="form-group">
                        <label asp-for="Raw" class="control-label"></label>
                        @Html.DropDownListFor(model => model.RawId, ViewBag.RawsAll as SelectList)
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        @Html.EditorFor(model => model.Quantity)
                    </div>

                    <div class="form-group">
                        <label asp-for="Sum" class="control-label"></label>
                        @Html.EditorFor(model => model.Sum)
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee" class="control-label"></label>
                        @Html.DropDownListFor(model => model.EmployeeId, ViewBag.Emp as SelectList)
                    </div>

                    
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </fieldset>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
